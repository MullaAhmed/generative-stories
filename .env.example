# Copy this file to .env and add your API keys

# IMPORTANT: For mem0ai memory system to work, you MUST have OpenAI API key
# The mem0_config.json is configured to use OpenAI for embeddings and LLM operations
OPENAI_API_KEY=your_openai_api_key_here

# mem0 API Key (for managed mem0 service)
# Get your API key from https://app.mem0.ai/
MEM0_API_KEY=your_mem0_api_key_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Groq API Key (if you want to use Groq models)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Google API Key (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Default LLM Provider for story generation (gemini, openai, or groq)
# Note: This is separate from mem0's LLM config which uses OpenAI
DEFAULT_LLM_PROVIDER=openai

# Memory Configuration (for mem0)
MEM0_CONFIG_PATH=config/mem0_config.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/logs/simulation.log

# Story Generation Settings
DEFAULT_STORY_LENGTH=medium
DEFAULT_GENRE=drama
DEFAULT_THEME=small_town

# File Paths
STORIES_DATA_DIR=data
STORIES_CONFIG_DIR=config
STORIES_SCENARIOS_DIR=config/scenarios

# Performance Settings
MAX_CONCURRENT_AGENTS=10
MEMORY_CLEANUP_INTERVAL=100
AUTO_SAVE_FREQUENCY=10